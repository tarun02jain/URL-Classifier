{
  "manifest_version": 3,
  "name": "URL Classifier",
  "version": "1.0",
  "description": "A React-based Chrome extension to classify URLs as legit or phished.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo512.png"
    }
  },
  "icons": {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
